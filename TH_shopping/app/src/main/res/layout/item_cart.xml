<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/txtCartProductName"
        android:text="Tên sản phẩm"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtCartProductPrice"
        android:text="Giá: 10000đ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <ImageButton
            android:id="@+id/btnCartDecrease"
            android:src="@drawable/outline_check_indeterminate_small_24"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Giảm"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/txtCartQuantity"
            android:text="1"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginHorizontal="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btnCartIncrease"
            android:src="@drawable/baseline_add_24"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Tăng"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/txtCartTotal"
            android:text="Tổng: 10000đ"
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btnCartDelete"
            android:src="@android:drawable/ic_delete"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Xoá"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

</LinearLayout>
